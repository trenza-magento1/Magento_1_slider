<config>
	<tabs>
        <trenza translate="label">
            <label>Trenza Softwares</label>
            <sort_order>100</sort_order>
        </trenza>
    </tabs>
    <sections>
        <slider translate="label" module="slider">
            <class>separator-top</class>
            <label>Home Page Slider</label>
            <tab>trenza</tab>
            <frontend_type>text</frontend_type>
            <sort_order>40</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <general translate="label" module="slider">
                    <label>General</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>100</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
						 <heading translate="label">
                            <label>Heading</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>0</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </heading>

						<show_description translate="label, comment">
							<label>Show description</label>
							<comment><![CDATA[show description in front of image]]></comment>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>2</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</show_description>
						
						<list_style translate="label, comment">
							<label>Style</label>
							<comment><![CDATA[Choice style for banner]]></comment>
							<frontend_type>select</frontend_type>
							<source_model>slider/system_config_styles</source_model>
							<sort_order>3</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</list_style>   
                    </fields>
                </general>
				
                <jquery translate="label" module="slider">
                    <label>jQuery Status</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>200</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
						<jquery translate="label, comment">
							<label>Enable jQuery</label>
							<comment><![CDATA[If jQuery already loaded you can disable slider jQuery]]></comment>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>2</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</jquery>       
                    </fields>
				</jquery>
            </groups>
        </slider>
    </sections>
</config>
